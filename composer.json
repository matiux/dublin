    "cqrs",
    "event sourcing",
    "domain-driven design",
    "ddd"
  ],
  "license": "MIT",
  "require": {
    "beberlei/assert": "^3.3.3",
    "broadway/uuid-generator": "^1.0",
    "php": ">=8.4"
  },
  "authors": [
    {
      "name": "Alexander",
      "email": "iam.asm89@gmail.com"
    },
